#include <stdio.h>
#include <stdlib.h>

int main()
{
while (1)
        {
        printf("-1 type d'ecran de veille \n");
        printf("-2 nom du fichier\n");
        int touche=0;
        printf("veulliez choisir l action a execute ");
        scanf ("%d" ,&touche);
        switch (touche)//permet de selectionner une entré du menu
            {
            case 1:
            printf("l'ecran de veille statique a ete lance 5 fois les 10 derniere fois \n");//a modifier avec les parametre de l'historique
            char c = fgetc(stdin);
            c=0;
            do
                {
                    c = fgetc(stdin);
                }while (c != '\n');//permet de faire une pause tant que l'on appuis pas sur la touche entré
            system ("clear");//permer d'effacer la console
            break;
        case 2:

            printf("le fichier... a ete lance 3 fois les 10 derniere fois");//a modifier avec les parametre de l'historique
            char v = fgetc(stdin);
            v=0;
            do
                {
                    v = fgetc(stdin);//permet de faire une pause tant que l'on appuis pas sur la touche entré
                }while (v != '\n');
            system ("clear");//permer d'effacer la console
            break;
            }
        }

    return 0;
}
