void afficherTableauH1(int* tableau2)
{//------------------------------------------------------------------------------------void
	
	FILE*  HEURE1= NULL;
	HEURE1=ouverture(dizaines_h);
	char c = 0;
int i=0;
int cpt = 0;

	while ( cpt < 2) {//--------------------------------while
		c= fgetc(HEURE1);
	if (c == '\n')
		{//------------------------------------------------if
			cpt++;	}//----------------------------------------------if
	}//-------------------------------------------------while


	do {//-------------------------------------------------------------------do/while
		c= fgetc(HEURE1);
		if(c == '0' || c == '1') {//--------------------if
			tableau2[i++] = c;

		}//---------------------------------------------if
	}while(c != EOF);//------------------------------------------------------do/while
    	int i = 0;
    	int j = 0;

    for (i = 0; i < 5; i++) {//------------------------------------------------------for
    	for(j = 0; j < 3; j++){ //------------for
		
		if (tableau2[i*24+j]=='0'){
	    		printf(" "); 
		} 
		else {
		    printf("%c",987);
		}        
	}//------------------------------------------------------------------------------for
	printf("\n");
	
    }//------------------------------------------------------------------for
}//--------------------------------------------------------------------------------------------------------------------------------------------------------------main


