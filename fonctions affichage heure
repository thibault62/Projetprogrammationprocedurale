		{//------------------------------------------------if
			cpt++;	}//----------------------------------------------if
	}//-------------------------------------------------while


	do {//-------------------------------------------------------------------do/while
		c= fgetc(SEC1);
		if(c == '0' || c == '1') {//--------------------if
			tableau2[i++] = c;

		}//---------------------------------------------if
	}while(c != EOF);//------------------------------------------------------do/while
    	int i = 0;
    	int j = 0;

    for (i = 0; i < 5; i++) {//------------------------------------------------------for
    	for(j = 19; j < 22; j++){ //------------for
		
		if (tableau2[i*24+j]=='0'){
	    		printf(" "); 
		} 
		else {
		    printf("%c",987);
		}        
