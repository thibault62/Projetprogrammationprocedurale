    }//------------------------------------------------------------------for
}//--------------------------------------------------------------------------------------------------------------------------------------------------------------main






void afficherTableauS2(int* tableau2)
{//------------------------------------------------------------------------------------void
	
	FILE*  SEC2= NULL;
	SEC2=ouverture(unites_s);
	char c = 0;
int i=0;
int cpt = 0;

	while ( cpt < 2) 
	{//--------------------------------while
		c= fgetc(SEC2);
	if (c == '\n')
		{//------------------------------------------------if
			cpt++;
		}//----------------------------------------------if
	}//-------------------------------------------------while


	do {//-------------------------------------------------------------------do/while
		c= fgetc(SEC2);
		if(c == '0' || c == '1') {//--------------------if
			tableau2[i++] = c;

		}//---------------------------------------------if
	}while(c != EOF);//------------------------------------------------------do/while
    	int i = 0;
    	int j = 0;

    for (i = 0; i < 5; i++) {//------------------------------------------------------for
    	for(j = 22; j < 26; j++){ //------------for
		
		if (tableau2[i*24+j]=='0'){
	    		printf(" "); 
		} 
		else {
		    printf("%c",987);
		}        
	}//------------------------------------------------------------------------------for
	printf("\n");
	
    }//------------------------------------------------------------------for
}//--------------------------------------------------------------------------------------------------------------------------------------------------------------main
